<?xml version="1.0"?>
<launch>
    <!-- config file path  -->
    <arg name="rviz_settings" default="$(find pedestrian_state_predictor)/config/rviz/pedestrian_state_predictor_debug.rviz"/>
    <arg name="pedestrian_state_predictor_settings" default="$(find pedestrian_state_predictor)/config/param/pedestrian_state_predictor_debug.yaml"/>

    <!-- node launch -->
    <node pkg="pedestrian_state_predictor" type="pedestrian_state_predictor_node" name="pedestrian_state_predictor" output="screen">
        <rosparam command="load" file="$(arg pedestrian_state_predictor_settings)"/>
    </node>

    <!-- rviz -->
    <node pkg="rviz" type="rviz" name="planner_rviz" args="-d $(arg rviz_settings)"/>

    <!-- =============== Move ccv =============== -->
    <node pkg="steering_path_planner" type="test_path_creator" name="test_path_generator">
        <!-- <param name="world_frame_id" value="world"/> -->
        <param name="world_frame_id" value="odom"/>
        <param name="resolution" value="0.05"/>
        <param name="course_length" value="7.0"/>
        <param name="init_x" value="2.0"/><!-- -4.957 -->
        <param name="init_y" value="0.3"/><!-- 1.886 -->
        <param name="init_theta" value="0.75"/><!-- -0.355 -->
        <param name="A1" value="0.5"/>
        <param name="omega1" value="85"/>
        <!-- <param name="omega1" value="85"/> -->
        <param name="delta1" value="220"/>
        <param name="A2" value="0.0"/>
        <param name="omega2" value="0"/>
        <param name="delta2" value="0"/>
        <param name="A3" value="0.0"/>
        <param name="omega3" value="0"/>
        <param name="delta3" value="0"/>
    </node>

    <node pkg="ccv_pure_pursuit_steering" type="ccv_pure_pursuit_steering" name="pure_pursuit_steering">
        <param name="max_target_velocity" value="1.2"/>
        <param name="max_steering_angle" value="0.0"/>
        <param name="hz" value="50"/>
        <param name="L1" value="0.5"/>
        <param name="L2" value="0.2"/>
        <param name="goal_border" value="0.5"/>
        <param name="read_marker" value="false"/>
        <param name="world_frame_id" value="world"/>
        <param name="world_frame_id" value="odom"/>
        <!-- <param name="robot_frame_id" value="vicon/ccv/ccv"/> -->
        <param name="robot_frame_id" value="base_link"/>
        <remap from="/predicted_path" to="/local_path"/>
        <!-- remap for sq2_ccv_description -->
        <remap from="/local/cmd_vel" to="/sq2_ccv/diff_drive_steering_controller/cmd_vel"/>
    </node>

    <node pkg="ccv_pure_pursuit_steering" type="steering_angle_publisher" name="steering_angle_publisher"/>

    <node pkg="rviz" type="rviz" name="ccv_rviz" args="-d $(find ccv_experiment)/config/rviz/all_debug.rviz"/>
    
    <!-- =============== Simulator =============== -->
    <include file="$(find ccv_experiment)/launch/pedestrian_simulator.launch">

   <!-- Rviz -->
   <node pkg="rviz" type="rviz" name="sim_rviz" args="-d $(find pedsim_simulator)/rviz/human_only$(arg ns).rviz" if="$(arg visualize)"/>
</launch>